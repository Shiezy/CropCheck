<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:focusable="true"
    card_view:cardBackgroundColor="@android:color/primary_text_dark"
    card_view:cardElevation="15dp">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

            <ImageView
                    android:id="@+id/site_image"
                    android:layout_width="17dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@mipmap/ic_round_fiber_transparent"
                    android:layout_marginRight="10dp"
                    android:contentDescription="POINTER" />

            <TextView
                android:id="@+id/risk_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:text="CropCheck User"
                android:textColor="#000"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/site_image"
                app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>

</android.support.v7.widget.CardView>