    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent">-->

        <ImageView
            android:id="@+id/site_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher_transparent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/site_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"
            android:text="CropCheck User"
            android:textColor="#000"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/site_image"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/site_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33716077"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"
            android:textColor="#000"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/site_image"
            app:layout_constraintTop_toBottomOf="@id/site_name"/>

    </LinearLayout>

    </LinearLayout>

